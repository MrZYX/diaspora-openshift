#!/bin/bash
# This is a simple script and will be executed on your CI system if
# available.  Otherwise it will execute while your application is stopped
# before the build step.  This script gets executed directly, so it
# could be python, php, ruby, etc.

source $OPENSHIFT_CARTRIDGE_SDK_BASH
source ${OPENSHIFT_RUBY_DIR}/lib/ruby_context

if [ -z "$BUNDLE_WITHOUT" ]; then
  export BUNDLE_WITHOUT='development test'
  if [ "$(type -t set_env_var)" == "function" ]; then
    set_env_var 'BUNDLE_WITHOUT' "$BUNDLE_WITHOUT" $OPENSHIFT_HOMEDIR/.env/user_vars
  fi
fi

# Update bundler to the latest and greatest
ruby_with_nodejs_context "gem update bundler"

cd
cd app-root && gem install rack
